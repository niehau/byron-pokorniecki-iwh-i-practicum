doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 #{title}
        section.content-width
          .cards
            each game in data
                .card 
                    h2.card__name #{game.properties.title}  
                    p.card__price Price: #{game.properties.price}
                    p.card__dev_id Developer ID: #{game.properties.dev_id}
                    a.card__link(href=`/update-cobj?title=${game.properties.title}&price=${game.properties.price}&dev_id=${game.properties.dev_id}` aria-label=`Edit game`)
                      svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10')
        section.content-width
          .add-game
            .card.grey-card
              h2 Add a Game
              form(action="/update-cobj" method="POST")
                  label(for="title") Title
                  input(type="text" name="title" id="title")
                  label(for="price") Price
                  input(type="text" name="price" id="price")
                  input(type="submit" value="Add Game")